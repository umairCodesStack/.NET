@model List<Lab_09.Models.PharmacyItem>

<h1>Pharmacy Items</h1>

<!-- Search Bar -->
<form method="get" asp-action="Index">
    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="Search items..." />
    <button type="submit">Search</button>
</form>

@if (Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Catagorey</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No items found matching your search.</p>
}

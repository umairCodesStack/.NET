@model Lab_09.Models.PharmacyItem

<h1>Pharmacy Item Details</h1>

<div>
    <h2>@Model.Name</h2>
    <p><strong>Category:</strong> @Model.Catagorey</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>Quantity:</strong> @Model.Quantity</p>
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <p><img src="@Model.ImagePath" alt="@Model.Name" style="max-width: 300px;" /></p>
    }
    else
    {
        <p>No image available</p>
    }
</div>

<a asp-action="Index">Back to List</a>
